<p id="notice"><%= notice %></p>

<h1>タスク</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task_status(task.status) %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <% if task.status == 3 %>
          <td><%= link_to 'Destroy', task_destroy_path(task.id, title: task.title), method: :patch, data: { confirm: '本当に削除していいですか?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_task_path %><br>
<%= link_to '下書きのタスク', outline_path %><br>
<%= link_to '削除したタスク', delete_path %>
