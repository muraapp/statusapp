<p id="notice"><%= notice %></p>

<h1>下書きのタスク</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task_status(task.status) %></td>
        <td><%= link_to '公開する', task_release_path(task), data: { confirm: '公開していいですか？'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'トップに戻る', root_path %>
